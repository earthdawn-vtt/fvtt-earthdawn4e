{
  "$schema":               "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version":               "0.2",
  "language":              "en",
  "dictionaryDefinitions": [
    {
      "name":     "ed4e-words",
      "path":     "./dictionaries/ed4e-words.txt",
      "addWords": true
    },
    {
      "name":     "foundry-vtt-words",
      "path":     "./dictionaries/foundry-vtt-words.txt",
      "addWords": true
    },
    {
      "name":     "0_8_2_migration-words",
      "path":     "./dictionaries/0_8_2_migration-words.txt",
      "addWords": true
    },
    {
      "name":     "technical-words",
      "path":     "./dictionaries/technical-words.txt",
      "addWords": true
    },
    {
      "name":     "ui-ux-words",
      "path":     "./dictionaries/ui-ux-words.txt",
      "addWords": true  
    }
  ],
  "dictionaries": [
    "ed4e-words",
    "foundry-vtt-words",
    "0_8_2_migration-words",
    "technical-words",
    "ui-ux-words",
  ],
  "enabledFileTypes":      {
    "js":   true,
    "mjs":  true,
    "hbs":  true,
    "json": false
  },
  "ignorePaths":           [
    "**/*.svg",
    ".husky/**/*",
    "lang/**",
    "module/packs/**",
    "module/tours/de/**",
    "node_modules/**",
    "system.json",
    "module/config/migrations.mjs",
    "module/config/document-data.mjs",
  ],
  "useGitignore":          true
}