<div>
  <div class="form-group replacement-abilities">
    <label>{{localize "ED.Dialogs.ChooseAdderSubstitute.replacementLabel"}}</label>
    <div class="form-fields">
      <select name="replacementAbilityUuid">
        <option value=""></option>
        {{selectOptions substitutes valueAttr="key" labelAttr="label"}}
      </select>
    </div>
    <p class="hint">{{localize "ED.Dialogs.ChooseAdderSubstitute.replacementHint" rollType=rollTypeLocalized}}</p>
  </div>

  <div class="form-group adder-abilities">
    <label>{{localize "ED.Dialogs.ChooseAdderSubstitute.adderLabel"}}</label>
    <div class="form-fields">
      <multi-select name="increaseAbilityUuids">
        {{selectOptions adders valueAttr="key" labelAttr="label"}}
      </multi-select>
    </div>
    <p class="hint">{{localize "ED.Dialogs.ChooseAdderSubstitute.adderHint" rollType=rollTypeLocalized}}</p>
  </div>
</div>