<section class="tab {{tabs.general.cssClass}}" data-group="sheet" data-tab="general">
<div class="left-part">
    {{!-- Attribute --}}
    <div>
        <h3 class="margin__none">
            <label>{{localize "ED.Actor.Header.attributes"}}</label>
        </h3>
        <div class="attribute-card__grid--container font__bold">
            <div class="attribute-card__grid--item"></div>
            <div class="attribute-card__grid--item">
                <label>{{localize "ED.Actor.Attributes.attributeName"}}</label>
            </div>
            {{#if (eq this.actor.type "character")}}
            <div class="attribute-card__grid--item">
                <label>
                    {{localize "ED.Actor.Attributes.attributeValue"}}
                </label>
            </div>
             <div class="attribute-card__grid--item">
                <label>
                    {{localize "ED.Actor.Attributes.increase"}}
                </label>
            </div>
            {{/if}}
            <div class="attribute-card__grid--item">
                <label>
                    {{localize "ED.Actor.Attributes.attribueStep"}}
                </label>
            </div>
        </div>
        {{#if (eq this.actor.type "character")}}
        {{> "systems/ed4e/templates/actor/cards/attribute-card.hbs"}}
        {{else}}
        {{> "systems/ed4e/templates/actor/cards/attributes-none-pc-card.hbs"}}
        {{/if}}
    </div>

    {{!-- Karma --}}
    <div class="space__small1">
        <h3 class="one-line__vertical-align karma-devotion__header margin__none">
            <label>{{localize "ED.Actor.Header.karma"}}</label>
            <span class="icon__position--right one-line__vertical-align">
                <input type="checkbox" name="system.karma.useAlways" {{checked actor.system.karma.useAlways}} title="{{localize "ED.Actor.Tooltips.karmaAlways"}}">
                {{#if (eq this.actor.type "character")}}
                <a class="karma__ritual">
                    <button class="button__Karma-refresh" data-action="karmaRitual" title="Karma-Ritual">
                        <i class="fa-solid fa-person-rays" title="{{localize "ED.Actor.Tooltips.karmaRitualTooltip"}}"></i>
                    </button>
                </a>
                {{/if}}
            </span>
        </h3>
        <div class="karma-devotion__grid--container font__bold">
            <div class="karma-devotion__grid--item">{{localize "ED.Actor.Karma.current"}}</div>
            <div class="karma-devotion__grid--item">{{localize "ED.Actor.Karma.max"}}</div>
            <div class="karma-devotion__grid--item">{{localize "ED.Actor.Karma.step"}}</div>
        </div>
        <div class="karma-devotion__grid--container font__bold">
            <div class="karma-devotion__grid--item">
                <input class="input__circle-input--centered"  name="system.karma.value"
                            value="{{actor.system.karma.value}}">
            </div>
            <div class="karma-devotion__grid--item">
                <input class="input__circle-input--centered" name="system.karma.max"
                            value="{{actor.system.karma.max}}" {{#if (eq this.actor.type "character")}}readonly{{/if}}>
            </div>
            <div class="karma-devotion__grid--item">
                <input class="input__circle-input--centered" name="system.karma.step"
                            value="{{actor.system.karma.step}}">
            </div>
        </div>
    </div>
    {{!-- Devotion --}}
    <div class="space__small1">
        <h3 class="one-line__vertical-align karma-devotion__header margin__none">
            <label>{{localize "ED.Actor.Header.devotion"}}</label>
        </h3>
        <div class="karma-devotion__grid--container font__bold">
            <div class="karma-devotion__grid--item">{{localize "ED.Actor.Devotion.current"}}</div>
            <div class="karma-devotion__grid--item">{{localize "ED.Actor.Devotion.max"}}</div>
            <div class="karma-devotion__grid--item">{{localize "ED.Actor.Devotion.step"}}</div>
        </div>
        <div class="karma-devotion__grid--container font__bold">
            <div class="karma-devotion__grid--item">
                <input class="input__circle-input--centered"  name="system.devotion.value"
                            value="{{actor.system.devotion.value}}">
            </div>
            <div class="karma-devotion__grid--item">
                <input class="input__circle-input--centered" name="system.devotion.max"
                            value="{{actor.system.devotion.max}}" {{#if (eq this.actor.type "character")}}readonly{{/if}}>
            </div>
            <div class="karma-devotion__grid--item">
                <input class="input__circle-input--centered" name="system.devotion.step"
                            value="{{actor.system.devotion.step}}">
            </div>
        </div>
    </div>
</div>
{{!-- Conditions --}}
<div class="right-part">
    <div class="conditions__grid--wrapper">
        <div class="conditions__grid--header">
            <h3>{{localize "ED.Actor.Header.conditions"}}</h3>
        </div>
        {{!-- aggressiveAttack --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.aggressiveAttack" {{checked actor.system.condition.aggressiveAttack}}>
            {{localize "ED.Actor.Conditions.aggressiveAttack"}}
        </label>
        </div>
        {{!-- coverPartial --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.cover.partial" {{checked actor.system.condition.cover.partial}}>
            {{localize "ED.Actor.Conditions.coverPartial"}}
        </label>
        </div>
        {{!-- coverFull --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.cover.full" {{checked actor.system.condition.cover.full}}>
            {{localize "ED.Actor.Conditions.coverFull"}}
        </label>
        </div>
        {{!-- darknessPartial --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.darkness.partial" {{checked actor.system.condition.darkness.partial}}>
            {{localize "ED.Actor.Conditions.darknessPartial"}}
        </label>
        </div>
        {{!-- darknessFull --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.darkness.full" {{checked actor.system.condition.darkness.full}}>
            {{localize "ED.Actor.Conditions.darknessFull"}}
        </label>
        </div>
        {{!-- defensiveStance --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.defensiveStance" {{checked actor.system.condition.defensiveStance}}>
            {{localize "ED.Actor.Conditions.defensiveStance"}}
        </label>
        </div>
        {{!-- fury --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.fury" {{checked actor.system.condition.fury}}>
            {{localize "ED.Actor.Conditions.fury"}}
        </label>
        </div>
        {{!-- harried --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.harried" {{checked actor.system.condition.harried}}>
            {{localize "ED.Actor.Conditions.harried"}}
        </label>
        </div>
        {{!-- impairedMovementPartial --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.impairedMovement.partial" {{checked actor.system.condition.impairedMovement.partial}}>
            {{localize "ED.Actor.Conditions.impairedMovementPartial"}}
        </label>
        </div>
        {{!-- impairedMovementFull --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.impairedMovement.full" {{checked actor.system.condition.impairedMovement.full}}>
            {{localize "ED.Actor.Conditions.impairedMovementFull"}}
        </label>
        </div>
        {{!-- knockedDown --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.knockedDown" {{checked actor.system.condition.knockedDown}}>
            {{localize "ED.Actor.Conditions.knockedDown"}}
        </label>
        </div>
        {{!-- surprised --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            <input type="checkbox" class="condition-toggle__input" name="system.condition.surprised" {{checked actor.system.condition.surprised}}>
            {{localize "ED.Actor.Conditions.surprised"}}
        </label>
        </div>
        {{!-- overwhelmed --}}
        <div class="conditions__grid--container">
        <label class="condition-toggle__label">
            {{localize "ED.Actor.Conditions.overwhelmed"}}:
            <input type="number"
                name="system.condition.overwhelmed"
                value="{{actor.system.condition.overwhelmed}}"
                class="overwhelmed__input" />
        </label>
        </div>
</div>

    </div>
  </div>
</div>





  <!-- Attacks -->
  <div class="partial__two">
    <div>
      <h3>{{localize "ED.Actor.Header.defaultAttacks"}}</h3>
      <div>


        {{#if this.actor.namegiver.system.tailAttack}}
          <div class="partial__three">
            <button class="attack-substitute__weapon-attack" data-action="attack" data-attack-type="weapon">{{localize "ED.Actor.Buttons.weaponAttack"}}</button>
          </div>
          <div class="partial__three">
            <button class="attack-substitute__unarmed-attack" data-action="attack" data-attack-type="unarmed">{{localize "ED.Actor.Buttons.unarmedAttack"}}</button>
          </div>
          <div class="partial__three">
            <button class="attack-substitute__tail-attack" data-action="attack" data-attack-type="tail">{{localize "ED.Actor.Buttons.tailAttack"}}</button>
          </div>
        {{else}}
          <div class="partial__two">
            <button class="attack-substitute__weapon-attack" data-action="attack" data-attack-type="weapon">{{localize "ED.Actor.Buttons.weaponAttack"}}</button>
          </div>
          <div class="partial__two">
            <button class="attack-substitute__unarmed-attack" data-action="attack" data-attack-type="unarmed">{{localize "ED.Actor.Buttons.unarmedAttack"}}</button>
          </div>
        {{/if}}
      </div>
    </div>
    {{!-- tobe removed --}}
    <br>
    <br>



    <div>
      <h3 class="undefined">{{localize "ED.Actor.Header.specialAbility"}}</h3>
      <div class="undefined">
        wie soll diese ansicht aussehen, wie Rollable items oder nicht?
        {{#each actor.itemTypes.specialAbility}}
          <div class="item-id one-line__vertical-align" data-item-id="{{_id}}">
            <div class="partial__two one-line__vertical-align">
              <img src="{{img}}" data-edit="img" title="{{name}}" height="25" width="25" />
              {{name}}
            </div>
            <div class="partial__two one-line__vertical-align">
              {{> "systems/ed4e/templates/global/card-options-chat.hbs"}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>

</div>
</section>