<section class="tab {{tabs.powers.cssClass}}" data-group="sheet" data-tab="powers">
<h2>{{localize "ED.Actor.Header.abilities"}}</h2>
  <div class="container__block">

{{!-- Attacks --}}
    <div class="container__section">
        <div class="power-card__grid--container container__header text-break__auto">
            <div class="power-card__grid--item text__alignment--center"></div>
            <div class="power-card__grid--item text__alignment--center">{{localize "ED.Actor.Header.attacks"}}</div>
            <div class="power-card__grid--item text__alignment--center">{{localize "ED.Actor.Header.action"}}</div>
            <div class="power-card__grid--item text__alignment--center">{{localize "ED.Actor.Header.step"}}</div>
            <div class="power-card__grid--item text__alignment--center">{{localize "ED.Actor.Header.damage"}}</div>
            <div class="power-card__grid--item text__alignment--center">{{localize "ED.Actor.Header.strain"}}</div>
            <div class="power-card__grid--item text__alignment--center"></div>
        </div>
        {{#each actor.itemTypes.power}}
            {{#if this.system.isCreatureAttack}}
                {{> "systems/ed4e/templates/actor/cards/power-card.hbs"}}
            {{/if}}
        {{/each}}
    </div>
    {{!-- Powers --}}
    <div class="container__section">
        <div class="power-card__grid--container container__header text-break__auto">
            <div class="power-card__grid--item"></div>
            <div class="power-card__grid--item">{{localize "ED.Actor.Header.powers"}}</div>
            <div class="power-card__grid--item">{{localize "ED.Actor.Header.action"}}</div>
            <div class="power-card__grid--item">{{localize "ED.Actor.Header.step"}}</div>
            <div class="power-card__grid--item">{{localize "ED.Actor.Header.damage"}}</div>
            <div class="power-card__grid--item">{{localize "ED.Actor.Header.strain"}}</div>
            <div class="power-card__grid--item"></div>
        </div>
        {{#each actor.itemTypes.power}}
            {{#if (ne this.system.rollType "attack")}}
            {{> "systems/ed4e/templates/actor/cards/power-card.hbs"}}
            {{/if}}
        {{/each}}
    </div>
    {{!-- Maneuvers --}}
    <div class="container__section">
        <div class="maneuver-card__grid--container container__header text-break__auto">
            <div class="maneuver-card__grid--item"></div>
            <div class="maneuver-card__grid--item">{{localize "ED.Actor.Header.maneuvers"}}</div>
            <div class="maneuver-card__grid--item">{{localize "ED.Actor.Header.extraSuccesses"}}</div>
            <div class="maneuver-card__grid--item"></div>
            <div class="maneuver-card__grid--item"></div>
        </div>
        {{#each actor.itemTypes.maneuver}}
            {{> "systems/ed4e/templates/actor/cards/maneuver-card.hbs"}}
        {{/each}}
    </div>     
  </div>
</section>