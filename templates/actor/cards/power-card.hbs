<div class="card__power card__ability favoritable" data-uuid="{{uuid}}">
    <div class="power-card__grid--container ability-card__grid--container item-id" data-item-id="{{_id}}">
        <div class="power-card__grid--item icons__dice {{#if (or (ne this.system.powerStep 0) (ne this.system.strain 0))}}has-overlay{{/if}}">
        <img class="power-icon ability-icon" src="{{img}}" alt="{{name}}">
        {{#if (ne this.system.powerStep 0)}}
            <button
                type="button"
                class="icon--button icon icon--d20 rollable icon--overlay"
                data-action="rollable"
                data-tooltip="Roll {{name}}"
                data-tooltip-direction="UP"
                aria-label="Roll {{name}}">
            </button>
        {{else}}
            {{#if (ne this.system.strain 0)}}
            <button
                type="button"
                class="icon--button icon icon--blood take-strain icon--overlay"
                data-action="takeStrain"
                data-attribute="{{@key}}"
                data-tooltip="{{localize 'ED.Data.Item.Action.FIELDS.strain.label'}}"
                data-tooltip-direction="UP"
                aria-label="{{localize 'ED.Data.Item.Action.FIELDS.strain.label'}}">
            </button>
            {{/if}}
        {{/if}}
        </div>
        <div class="power-card__grid--item card__name" data-action="expandItem">{{name}}</div>
        <div class="power-card__grid--item text__alignment--center">{{system.action}}</div>
        <div class="power-card__grid--item text__alignment--center">{{system.powerStep}}</div>   
        <div class="power-card__grid--item text__alignment--center">{{#if (ne system.rollType "damage") }}{{system.damageStep}}{{/if}}</div>
        <div class="power-card__grid--item text__alignment--center">{{system.strain}}</div>
        <div class="power-card__grid--item text__alignment--center">{{> "systems/ed4e/templates/global/card-options-chat.hbs"}}</div>
    </div>
    <div class="card__description card__description--toggle display__inline-block">
        <span class="card__description--content">
            {{{system.description.value}}}
        </span>
        <span>
            {{#each this.effects as |effects id|}}
            {{> "systems/ed4e/templates/actor/cards/effect-card-link.hbs" effects }}
            {{/each}}
        </span>
    </div>
</div>
