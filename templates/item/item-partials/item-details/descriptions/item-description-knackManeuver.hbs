<div id="base-description-knackManeuver-item" class="item-description__knackManeuver item-body" data-editable="{{#if @root.editable}}editable{{else}}readonly{{/if}}">

  {{!-- Required Extra Successes --}}
  <div class="item-section item-section--extra-successes item-group">
    {{#if @root.editable}}
      {{formField systemFields.extraSuccesses name="system.extraSuccesses" value=item.system.extraSuccesses localize=true}}
    {{else}}
      <div class="item-line item-line--extra-successes">
        <span class="item-line__label">
          {{localize systemFields.extraSuccesses.label}}:
        </span>
        <span class="item-line__dots" aria-hidden="true"></span>
        <span class="item-line__value">
          {{item.system.extraSuccesses}}
        </span>
      </div>
    {{/if}}
  </div>

  <span class="item-line--space">
    <br>
  </span>

  {{!-- Source Item --}}
    <div class="item-section item-section--source-item item-group">
  {{#if @root.editable}}{{formField systemFields.sourceItem name="system.sourceItem" value=item.system.sourceItem localize=true}}
  {{else if item.system.sourceItem}}
    <div class="item-line item-line--source-item">
      <span class="item-line__label">
        {{localize systemFields.sourceItem.label}}:
      </span>
      <span class="item-line__dots" aria-hidden="true"></span>
      <span class="item-line__value">
        {{item.system.sourceItem}}
      </span>
    </div>
  {{/if}}
  </div>

  {{!-- Minimum Level --}}
  <div class="item-section item-section--min-level item-group">
    {{#if @root.editable}}
      {{formInput systemFields.minLevel name="system.minLevel" value=item.system.minLevel}}
    {{else}}
      <div class="item-line item-line--min-level">
        <span class="item-line__label">
          {{localize systemFields.minLevel.label}}:
        </span>
        <span class="item-line__dots" aria-hidden="true"></span>
        <span class="item-line__value">
          {{item.system.minLevel}}
        </span>
      </div>
    {{/if}}
  </div>

  {{> "systems/ed4e/templates/form/group/general.hbs"
    dataField=systemFields.requirements
    inputTemplate="systems/ed4e/templates/form/input/configurable-array-summary.hbs"
    data=item.system.requirements
    config=config
  }}

  {{> "systems/ed4e/templates/form/group/general.hbs"
    dataField=systemFields.restrictions
    inputTemplate="systems/ed4e/templates/form/input/configurable-array-summary.hbs"
    data=item.system.restrictions
    config=config
  }}

  <div class="item-section__description">
      <h3 class="item-header__descrption label--rail">
          <span class="label__text">
              {{localize "ED.Item.Header.description"}}
          </span>
      </h3>
      <span class="item-body__description">
          {{#if @root.editable}}
              {{> "systems/ed4e/templates/global/editor.hbs"}}
          {{else}}
              {{{enrichedDescription}}}
          {{/if}}
      </span>
  </div>
</div>