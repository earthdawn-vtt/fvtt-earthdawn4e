<div id="base-description-armor-item" class="item-description__armor item-body" data-editable="{{#if @root.editable}}editable{{else}}readonly{{/if}}">
    
    {{!-- Physical Armor --}}
    {{formField systemFields.physical.fields.armor name="system.physical.armor" value=item.system.physical.armor localize=true}}
    
    {{!-- Mystical Armor --}}
    {{formField systemFields.mystical.fields.armor name="system.mystical.armor" value=item.system.mystical.armor localize=true}}
    
    {{!-- Physical Forge Bonus --}}
    {{formField systemFields.physical.fields.forgeBonus name="system.physical.forgeBonus" value=item.system.physical.forgeBonus localize=true}}
    
    {{!-- Mystical Forge Bonus --}}
    {{formField systemFields.mystical.fields.forgeBonus name="system.mystical.forgeBonus" value=item.system.mystical.forgeBonus localize=true}}
    
    {{!-- Initiative Penalty --}}
    {{formField systemFields.initiativePenalty name="system.initiativePenalty" value=item.system.initiativePenalty localize=true}}
    
    {{!-- living Armor? --}}
    {{formField systemFields.isLiving name="system.isLiving" value=item.system.isLiving localize=true}}
    
    {{!-- Physical Item Parameter --}}
    {{> "systems/ed4e/templates/item/item-partials/item-details/partials/physical-items.hbs"}}

    <div class="item-section__description">
        <h3 class="item-header__descrption label--rail">
            <span class="label__text">
                {{localize "ED.Item.Header.description"}}
            </span>
        </h3>
        <span class="item-body__description">
            {{#if @root.editable}}
                {{> "systems/ed4e/templates/global/editor.hbs"}}
            {{else}}
                {{{enrichedDescription}}}
            {{/if}}
        </span>
    </div>

</div>