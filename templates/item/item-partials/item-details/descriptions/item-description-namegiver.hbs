        <div class="item-line item-line--charisma-value">
          <span class="item-line__label">
            {{localize "ED.Item.Namegiver.charismaValue"}}:
          </span>
          <span class="item-line__dots" aria-hidden="true"></span>
          <span class="item-line__value">
            {{item.system.attributeValues.cha}}
          </span>
        </div>
      </div>

    {{/if}}
  </div>

  <span class="item-line--space">
    <br>
  </span>


  {{!-- Karma Modifier --}}
  <div class="item-section item-section--karma-modifier item-group">
    {{#if @root.editable}}
      {{formField systemFields.karmaModifier name="system.karmaModifier" value=item.system.karmaModifier localize=true}}
    {{else}}
      <div class="item-line item-line--karma-modifier">
        <span class="item-line__label">
          {{localize systemFields.karmaModifier.label}}:
        </span>
        <span class="item-line__dots" aria-hidden="true"></span>
        <span class="item-line__value">
          {{item.system.karmaModifier}}
        </span>
      </div>
    {{/if}}
  </div>

  <span class="item-line--space">
    <br>
  </span>

  {{!-- Movement: Walk --}}
  <div class="item-section item-section--movement-walk item-group">
    {{#if @root.editable}}
      {{formField systemFields.movement.fields.walk name="system.movement.walk" value=item.system.movement.walk localize=true}}
    {{else if item.system.movement.walk}}
      <div class="item-line item-line--movement-walk">
        <span class="item-line__label">
          {{localize systemFields.movement.fields.walk.label}}:
        </span>
        <span class="item-line__dots" aria-hidden="true"></span>
        <span class="item-line__value">
          {{item.system.movement.walk}}
        </span>
      </div>
