<div id="base-description-namegiver-item" class="item-description__namegiver item-body" data-editable="{{#if @root.editable}}editable{{else}}readonly{{/if}}">

  <div class="item-section--attributes">
    {{#if @root.editable}}

      {{!-- Dexterity Value --}}
      <div class="item-section item-section--dexterity-value item-group">
        <div class="form-group">
          <label>{{localize "ED.Item.Namegiver.dexterityValue"}}:</label>
          <div class="form-fields">
            <input
              name="system.attributeValues.dex"
              type="number"
              value="{{item.system.attributeValues.dex}}"
              data-dtype="Number" />
          </div>
        </div>
      </div>

      {{!-- Strength Value --}}
      <div class="item-section item-section--strength-value item-group">
        <div class="form-group">
          <label>{{localize "ED.Item.Namegiver.strengthValue"}}:</label>
          <div class="form-fields">
            <input
              name="system.attributeValues.str"
              type="number"
              value="{{item.system.attributeValues.str}}"
              data-dtype="Number" />
          </div>
        </div>
      </div>

      {{!-- Toughness Value --}}
      <div class="item-section item-section--toughness-value item-group">
        <div class="form-group">
          <label>{{localize "ED.Item.Namegiver.toughnessValue"}}:</label>
          <div class="form-fields">
            <input
              name="system.attributeValues.tou"
              type="number"
              value="{{item.system.attributeValues.tou}}"
              data-dtype="Number" />
          </div>
        </div>
      </div>

      {{!-- Perception Value --}}
      <div class="item-section item-section--perception-value item-group">
        <div class="form-group">
          <label>{{localize "ED.Item.Namegiver.perceptionValue"}}:</label>
          <div class="form-fields">
            <input
              name="system.attributeValues.per"
              type="number"
              value="{{item.system.attributeValues.per}}"
              data-dtype="Number" />
          </div>
        </div>
      </div>

      {{!-- Willpower Value --}}
      <div class="item-section item-section--willpower-value item-group">
        <div class="form-group">
          <label>{{localize "ED.Item.Namegiver.willpowerValue"}}:</label>
          <div class="form-fields">
            <input
              name="system.attributeValues.wil"
              type="number"
              value="{{item.system.attributeValues.wil}}"
              data-dtype="Number" />
          </div>
        </div>
      </div>

      {{!-- Charisma Value --}}
      <div class="item-section item-section--charisma-value item-group">
        <div class="form-group">
          <label>{{localize "ED.Item.Namegiver.charismaValue"}}:</label>
          <div class="form-fields">
            <input
              name="system.attributeValues.cha"
              type="number"
              value="{{item.system.attributeValues.cha}}"
              data-dtype="Number" />
          </div>
        </div>
      </div>

    {{else}}

      {{!-- Dexterity --}}
      <div class="item-section item-section--dexterity-value item-group">
        <div class="item-line item-line--dexterity-value">
          <span class="item-line__label">
            {{localize "ED.Item.Namegiver.dexterityValue"}}:
          </span>
          <span class="item-line__dots" aria-hidden="true"></span>
          <span class="item-line__value">
            {{item.system.attributeValues.dex}}
          </span>
        </div>
      </div>

      {{!-- Strength --}}
      <div class="item-section item-section--strength-value item-group">
        <div class="item-line item-line--strength-value">
          <span class="item-line__label">
            {{localize "ED.Item.Namegiver.strengthValue"}}:
          </span>
          <span class="item-line__dots" aria-hidden="true"></span>
          <span class="item-line__value">
            {{item.system.attributeValues.str}}
          </span>
        </div>
      </div>

      {{!-- Toughness --}}
      <div class="item-section item-section--toughness-value item-group">
        <div class="item-line item-line--toughness-value">
          <span class="item-line__label">
