        <span class="item-line__value">
          {{item.system.movement.swim}}
        </span>
      </div>
    {{/if}}
  </div>

  {{!-- Movement: Burrow --}}
  <div class="item-section item-section--movement-burrow item-group">
    {{#if @root.editable}}
      {{formField systemFields.movement.fields.burrow name="system.movement.burrow" value=item.system.movement.burrow localize=true}}
    {{else if item.system.movement.burrow}}
      <div class="item-line item-line--movement-burrow">
        <span class="item-line__label">
          {{localize systemFields.movement.fields.burrow.label}}:
        </span>
        <span class="item-line__dots" aria-hidden="true"></span>
        <span class="item-line__value">
          {{item.system.movement.burrow}}
        </span>
      </div>
    {{/if}}
  </div>

  {{!-- Movement: Climb --}}
  <div class="item-section item-section--movement-climb item-group">
    {{#if @root.editable}}
      {{formField systemFields.movement.fields.climb name="system.movement.climb" value=item.system.movement.climb localize=true}}
    {{else if item.system.movement.climb}}
      <div class="item-line item-line--movement-climb">
        <span class="item-line__label">
          {{localize systemFields.movement.fields.climb.label}}:
        </span>
