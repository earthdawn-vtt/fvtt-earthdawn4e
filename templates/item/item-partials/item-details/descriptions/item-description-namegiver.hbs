          <span class="item-line__dots" aria-hidden="true"></span>
          <span class="item-line__value">
            {{item.system.attributeValues.tou}}
          </span>
        </div>
      </div>

      {{!-- Perception --}}
      <div class="item-section item-section--perception-value item-group">
        <div class="item-line item-line--perception-value">
          <span class="item-line__label">
            {{localize "ED.Item.Namegiver.perceptionValue"}}:
          </span>
          <span class="item-line__dots" aria-hidden="true"></span>
          <span class="item-line__value">
            {{item.system.attributeValues.per}}
          </span>
        </div>
      </div>

      {{!-- Willpower --}}
      <div class="item-section item-section--willpower-value item-group">
        <div class="item-line item-line--willpower-value">
          <span class="item-line__label">
            {{localize "ED.Item.Namegiver.willpowerValue"}}:
