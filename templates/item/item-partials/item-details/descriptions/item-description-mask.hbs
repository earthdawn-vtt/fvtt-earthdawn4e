<div class="item__left--main">
    <h3>{{localize "ED.Item.Header.general"}}</h3>
    <fieldset>
        <legend>{{localize "ED.Item.Header.attributes"}}</legend>
        {{#each item.system.attributes}}
        <div class="form-group">
            <label>{{#with (lookup ../config.attributes @key)}}{{label}}{{/with}} {{localize "ED.Actor.Attributes.attributeStep"}}</label>
            <input class="form-field" type="number" name="system.attributes.{{@key}}.step" value="{{this.step}}" />
        </div>
        {{/each}}
    </fieldset>
    <fieldset>
        <legend>{{localize "ED.Item.Header.healthValues"}}</legend>
        {{!-- Wound Threshold bonus --}}
        {{formField systemFields.characteristics.fields.health.fields.woundThreshold name="system.characteristics.health.woundThreshold" value=item.system.characteristics.health.woundThreshold localize=true}}
        {{!-- Unconscious Threshold bonus --}}
        {{formField systemFields.characteristics.fields.health.fields.unconscious name="system.characteristics.health.unconscious" value=item.system.characteristics.health.unconscious localize=true}}
        {{!-- Death Threshold bonus --}}
        {{formField systemFields.characteristics.fields.health.fields.death name="system.characteristics.health.death" value=item.system.characteristics.health.death localize=true}}
        {{!-- Recovery test Resource bonus --}}
        {{formField systemFields.characteristics.fields.recoveryTestsResource.fields.value name="system.characteristics.recoveryTestsResource.value" value=item.system.characteristics.recoveryTestsResource.value localize=true}}
    </fieldset>
    <fieldset>
        <legend>{{localize "ED.Item.Header.armorValues"}}</legend>
        {{#each item.system.characteristics.armor}}
        <div class="form-group">
            <label>{{#with (lookup ../config.armor @key)}}{{localize this}}{{/with}}</label>
            <input class="form-field" type="number" name="system.characteristics.armor.{{@key}}.value" value="{{this.value}}" />
        </div>
        {{/each}}
    </fieldset>
    <fieldset>
        <legend>{{localize "ED.Item.Header.defenseValues"}}</legend>
        {{#each item.system.characteristics.defenses}}
        <div class="form-group">
            <label>{{#with (lookup ../config.defense @key)}}{{localize this}}{{/with}}</label>
            <input class="form-field" type="number" name="system.characteristics.defenses.{{@key}}.value" value="{{this.value}}" />
        </div>
        {{/each}}
    </fieldset>
    <fieldset>
        <legend>{{localize "ED.Item.Header.combatValues"}}</legend>
        {{!-- Knock Down Step bonus --}}
        {{formField systemFields.knockDownStep name="system.knockDownStep" value=item.system.knockDownStep localize=true}}
        {{!-- Damage Steps bonus --}}
        {{formField systemFields.damageStepsBonus name="system.damageStepsBonus" value=item.system.damageStepsBonus localize=true}}
        {{!-- Initiative Step bonus --}}
        {{formField systemFields.initiative name="system.initiative" value=item.system.initiative localize=true}}
        {{!-- Actions bonus --}}
        {{formField systemFields.actions name="system.actions" value=item.system.actions localize=true}}
    </fieldset>
    <fieldset>
        <legend>{{localize "ED.Item.Header.movementTypes"}}</legend>
        {{!-- Movement Walk bonus --}}
        {{formField systemFields.movement.fields.walk name="system.movement.walk" value=item.system.movement.walk localize=true}}
        {{!-- Movement Fly bonus --}}
        {{formField systemFields.movement.fields.fly name="system.movement.fly" value=item.system.movement.fly localize=true}}
        {{!-- Movement Swim bonus --}}
        {{formField systemFields.movement.fields.swim name="system.movement.swim" value=item.system.movement.swim localize=true}}
        {{!-- Movement Climb bonus --}}
        {{formField systemFields.movement.fields.climb name="system.movement.climb" value=item.system.movement.climb localize=true}}
        {{!-- Movement burrow bonus --}}
        {{formField systemFields.movement.fields.burrow name="system.movement.burrow" value=item.system.movement.burrow localize=true}}
    </fieldset>
    <fieldset>
        <legend>{{localize "ED.Item.Header.challengingRate"}}</legend>
        {{!-- Challenge Rate --}}
        {{formField systemFields.challenge.fields.rate name="system.challenge.rate" value=item.system.challenge.rate localize=true}}
    </fieldset>
    <fieldset>
        <legend>{{localize "ED.Item.Header.powers"}}</legend>
        {{#each item.system.powerItems.powers}}
        <div class="power-item">
            {{#with (lookup ../powerItems @index)}}
            <div class="power-name">{{{this.enrichedLink}}}</div>
            {{/with}}
            <input type="hidden" name="system.powerItems.powers.{{@index}}.uuid" value="{{this.uuid}}" />
            <input type="hidden" name="system.powerItems.powers.{{@index}}.edid" value="{{this.edid}}" />
            <div class="form-group">
            <label>{{localize "ED.Data.Item.Mask.FIELDS.powerItems.power.uuid.label"}}</label>
            <span class="form-field">{{this.uuid}}</span>
            </div>
            <div class="form-group">
            <label>{{localize "ED.Data.Item.Mask.FIELDS.powerItems.power.edid.label"}}</label>
            <span class="form-field">{{this.edid}}</span>
            </div>
            <div class="form-group">
            <label>{{localize "ED.Data.Item.Mask.FIELDS.powerItems.power.bonus.label"}}</label>
            <input class="form-field" type="number" name="system.powerItems.powers.{{@index}}.bonus" value="{{this.bonus}}" />
            </div>
            <div class="form-group">
            <label>{{localize "ED.Data.Item.Mask.FIELDS.powerItems.power.step.label"}}</label>
            <input class="form-field" type="number" name="system.powerItems.powers.{{@index}}.step" value="{{this.step}}" />
            </div>
        </div>
        {{/each}}
    </fieldset>
    <fieldset>
        <legend>{{localize "ED.Item.Header.maneuver"}}</legend>
        {{#each item.system.powerItems.maneuver}}
        <div class="power-item">
            {{#with (lookup ../maneuverItems @index)}}
            <div class="maneuver-name">{{{this.enrichedLink}}}</div>
            {{/with}}
            <input type="hidden" name="system.powerItems.maneuver.{{@index}}.uuid" value="{{this.uuid}}" />
            <input type="hidden" name="system.powerItems.maneuver.{{@index}}.edid" value="{{this.edid}}" />
            <div class="form-group">
            <label>{{localize "ED.Data.Item.Mask.FIELDS.powerItems.maneuver.uuid.label"}}</label>
            <span class="form-field">{{this.uuid}}</span>
            </div>
            <div class="form-group">
            <label>{{localize "ED.Data.Item.Mask.FIELDS.powerItems.maneuver.edid.label"}}</label>
            <span class="form-field">{{this.edid}}</span>
            </div>
        </div>
        {{/each}}
    </fieldset>
</div>
<div class="item__right--main sheet__editor">
    <h3>{{localize "ED.Item.Header.description"}}</h3>
    {{> "systems/ed4e/templates/global/editor.hbs"}}
</div>