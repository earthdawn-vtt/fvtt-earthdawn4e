<section class="tab {{tabs.effects.cssClass}}" data-group="sheet" data-tab="effects">

    <h3 class="item-header__type label--rail">
      <span class="label__text">
        {{localize "ED.Item.Header.effects"}}
        <a class="effect-add align-right-button" data-action="createChild" data-type="effect" data-effect-permanent="" title="{{localize " earthdawn.n.newItem" }}">
         <i class="fas fa-plus icon__position--right"></i>
        </a>
      </span>
    </h3>

    <div class="effect-card__grid--container font__bold text-break__auto">
      <div class="effect-card__grid--item"></div>
      <div class="effect-card__grid--item">{{localize "ED.Actor.Header.name"}}</div>
      <div class="effect-card__grid--item">{{localize "ED.Actor.Header.origin"}}</div>
      <div class="effect-card__grid--item text__alignment--center">{{localize "ED.Actor.Header.active"}}</div>
      <div class="effect-card__grid--item text__alignment--center">{{localize "ED.Actor.Header.duration"}}</div>
      <div class="effect-card__grid--item text__alignment--center">{{localize "ED.Actor.Header.controlIcons"}}</div>
    </div>

    <div>
      {{#each item.effects as |effect id|}}
        {{> "systems/ed4e/templates/global/effect-card.hbs" effect }}
      {{/each}}
    </div>

</section>