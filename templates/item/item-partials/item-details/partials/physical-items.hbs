<div id="base-partial-physical-item" class="item-partial__physical" data-editable="{{#if @root.editable}}editable{{else}}readonly{{/if}}">

    {{!-- Blood Magic Damage --}}
    {{#if @root.editable}}
        {{formField systemFields.bloodMagicDamage name="system.bloodMagicDamage" value=item.system.bloodMagicDamage localize=true}}
    {{else if item.system.bloodMagicDamage}}
        {{formField systemFields.bloodMagicDamage name="system.bloodMagicDamage" value=item.system.bloodMagicDamage localize=true}}
    {{/if}}

    <div class="form-group">
        <label>{{localize systemFields.price.fields.value.label}}</label>
        <div class="form-fields form-fields--price">
            {{formInput systemFields.price.fields.value name="system.price.value" value=item.system.price.value}}
            {{formInput systemFields.price.fields.denomination name="system.price.denomination" value=item.system.price.denomination}}
        </div>
        {{#if @root.editable}}<p class="hint">{{localize systemFields.price.fields.value.hint}}</p>{{/if}}
    </div>

    {{!-- weight --}}
    {{formField systemFields.weight.fields.value name="system.weight.value" value=item.system.weight.value localize=true}}

    {{!-- Availability --}}
    {{formField systemFields.availability name="system.availability" value=item.system.availability localize=true}}
        
</div>