<fieldset>
  <legend>{{localize "ED.Item.Header.targetingDetails"}}</legend>

  {{!-- Fixed Difficulty --}}
  <div class="form-group">
    <label>{{localize systemFields.difficulty.fields.fixed.label}}</label>

    {{#if systemFields.difficulty.fields.fixed.choices}}
      <select
        name="system.difficulty.fixed"
        data-dtype="{{systemFields.difficulty.fields.fixed.type}}">
        {{selectOptions
          systemFields.difficulty.fields.fixed.choices
          selected=item.system.difficulty.fixed
          localize=true}}
      </select>
    {{else}}
      <input
        type="text"
        name="system.difficulty.fixed"
        value="{{item.system.difficulty.fixed}}"
        data-dtype="{{systemFields.difficulty.fields.fixed.type}}" />
    {{/if}}

    {{#if @root.editable}}
      <p class="hint">{{localize systemFields.difficulty.fields.fixed.hint}}</p>
    {{/if}}
  </div>

  {{!-- Target Difficulty Parameter --}}
  <div class="form-group">
    <label>{{localize systemFields.difficulty.fields.target.label}}</label>

    {{#if systemFields.difficulty.fields.target.choices}}
