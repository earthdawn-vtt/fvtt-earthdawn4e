        data-dtype="{{systemFields.difficulty.fields.target.type}}">
        {{selectOptions
          systemFields.difficulty.fields.target.choices
          selected=item.system.difficulty.target
          localize=true}}
      </select>
    {{else}}
      <input
        type="text"
        name="system.difficulty.target"
        value="{{item.system.difficulty.target}}"
        data-dtype="{{systemFields.difficulty.fields.target.type}}" />
    {{/if}}

    {{#if @root.editable}}
      <p class="hint">{{localize systemFields.difficulty.fields.target.hint}}</p>
    {{/if}}
  </div>

  {{!-- Group Difficulty Parameter --}}
  <div class="form-group">
    <label>{{localize systemFields.difficulty.fields.group.label}}</label>

    {{#if systemFields.difficulty.fields.group.choices}}
      <select
        name="system.difficulty.group"
        data-dtype="{{systemFields.difficulty.fields.group.type}}">
        {{selectOptions
          systemFields.difficulty.fields.group.choices
          selected=item.system.difficulty.group
          localize=true}}
      </select>
    {{else}}
      <input
        type="text"
        name="system.difficulty.group"
        value="{{item.system.difficulty.group}}"
        data-dtype="{{systemFields.difficulty.fields.group.type}}" />
    {{/if}}

    {{#if @root.editable}}
      <p class="hint">{{localize systemFields.difficulty.fields.group.hint}}</p>
    {{/if}}
  </div>
</fieldset>
