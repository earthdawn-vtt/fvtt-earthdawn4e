{{!-- Spellcasting Type --}}
{{#if @root.editable}}
  {{formGroup systemFields.spellcastingType name="system.spellcastingType" value=item.system.spellcastingType localize=true}}
{{/if}}

{{!-- Circle --}}
<div class="item-section item-section--circle item-group">
  {{#if @root.editable}}
    {{formGroup systemFields.level name="system.level" value=item.system.level localize=true}}
  {{else}}
    <div class="item-line item-line--circle">
      <span class="item-line__label">
        {{localize systemFields.level.label}}:
      </span>
      <span class="item-line__dots" aria-hidden="true"></span>
      <span class="item-line__value">
        {{item.system.level}}
      </span>
    </div>
  {{/if}}
</div>

