{{formGroup systemFields.keywords name="system.keywords" value=item.system.keywords localize=true}}

{{!-- Duration --}}
<div class="item-section item-section--duration item-group">
  {{#if @root.editable}}

    {{> "systems/ed4e/templates/form/group/general.hbs"
      dataField=systemFields.duration
      inputTemplate="systems/ed4e/templates/form/input/base-metric.hbs"
      data=item.system.duration
      fields=item.system.duration.schema.fields
      fieldPath=systemFields.duration.fieldPath
      config=config
    }}

  {{else}}
    <div class="item-line item-line--duration">
      <span class="item-line__label">
        {{localize systemFields.duration.label}}:
      </span>
      <span class="item-line__dots" aria-hidden="true"></span>
      <span class="item-line__value">
        {{item.system.duration.value}}
        {{#if item.system.duration.unit}}
          {{localize (lookup systemFields.duration.fields.unit.choices item.system.duration.unit)}}
        {{/if}}
      </span>
    </div>
  {{/if}}
</div>

