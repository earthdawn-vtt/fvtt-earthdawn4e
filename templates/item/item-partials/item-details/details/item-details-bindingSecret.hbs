<div id="base-details-bindingSecret-item" class="item-details__bindingSecret" data-editable="{{#if @root.editable}}editable{{else}}readonly{{/if}}">

    <fieldset>
        <legend></legend>

        {{!-- concentration --}}
        <div class="form-group">
            <label>{{localize "ED.Item.Spell.concentration"}}:</label>
            <input class="item-data__checkbox--line" type="checkbox" name="system.concentration">
        </div>
        {{!-- binding --}}
        <div class="form-group">
            <label>{{localize "ED.Item.Spell.binding"}}:</label>
            <input class="item-data__checkbox--line" type="checkbox" name="system.binding">
        </div>
        {{!-- spirit --}}
        <div class="form-group">
            <label>{{localize "ED.Item.Spell.spirit"}}:</label>
            <input class="item-data__checkbox--line" type="checkbox" name="system.spirit">
        </div>
        {{!-- summoning --}}
        <div class="form-group">
            <label>{{localize "ED.Item.Spell.summoning"}}:</label>
            <input class="item-data__checkbox--line" type="checkbox" name="system.summoning">
        </div>
        {{!-- resist --}}
        <div class="form-group">
            <label>{{localize "ED.Item.Spell.resist"}}:</label>
            <input class="item-data__checkbox--line" type="checkbox" name="system.resist">
        </div>
        {{!-- Spell Illusion --}}
        <div class="form-group">
            <label>{{localize "ED.Item.Spell.sensingDifficulty"}}:</label>
            <input class="input__number-input" name="system.sensingDifficulty" type="text" value="{{item.system.sensingDifficulty}}"
                data-dtype="Number">
        </div>
    </fieldset>
    
</div>