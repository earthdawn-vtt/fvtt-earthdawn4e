<div>

  {{!-- Spell Illusion --}}
  {{#if item.system.isIllusion}}
    <div class="form-group label-top">
      <label>
        {{localize "ED4E.Data.Item.Fields.sensingDifficulty"}}
      </label>
      <input type="number" value="{{item.system.sensingDifficulty}}" readonly>
    </div>
  {{/if}}

  {{!-- Dispel Difficulty --}}
  <div class="form-group label-top">
    <label>
      {{localize "ED4E.Data.Item.Fields.dispelDifficulty"}}
    </label>
    <input type="number" value="{{item.system.dispelDifficulty}}" readonly>
  </div>

  {{formGroup systemFields.extraSuccess name="system.extraSuccess" value=item.system.extraSuccess localize=true}}

  {{formGroup systemFields.area name="system.area" value=item.system.area localize=true}}

  {{!--> "systems/ed4e/templates/item/item-partials/item-details/partials/targeting.hbs"--}}
</div>