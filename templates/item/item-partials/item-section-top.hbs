<header class="sheet-header item-header {{#if @root.editable}}item-header--editable{{else}}item-header--readonly{{/if}}">
  <div class="item-header__image">
    <img class="item-image"
         src="{{item.img}}"
         title="{{item.name}}"
         data-action="editImage"
         data-edit="img" />
  </div>

  <div class="item-header__body">
    <h3 class="header__no-border item-header__title">
      <input name="name"
             type="text"
             value="{{item.name}}"
             placeholder="{{localize 'ED.Item.Placeholder.name'}}" />
    </h3>

    <h3 class="item-header__type label--rail">
      <span class="label__text">

        {{#if @root.editable}}
        {{else}}
            {{#if systemFields.talentCategory}}
                {{localize (lookup systemFields.talentCategory.choices item.system.talentCategory)}}
            {{/if}}
        {{/if}}

        {{localize (concat "TYPES.Item." item.type)}}
      </span>
    </h3>

    <span class="item-summary">
      {{#if @root.editable}}
        <span class="summary-header__title">
            {{localize "ED.Item.Header.summary"}}
        </span>
      {{/if}}
      
      {{#if @root.editable}}
        {{> "systems/ed4e/templates/global/editor-brief.hbs"}}
      {{else}}
        {{{enrichedBriefDescription}}}
      {{/if}}

    </span>
  </div>

</header>
