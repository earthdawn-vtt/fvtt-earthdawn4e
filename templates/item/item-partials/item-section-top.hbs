<header class="sheet-header item-header {{#if @root.editable}}item-header--editable{{else}}item-header--readonly{{/if}}">
  <div class="item-header__image">
    <img
      class="item-image"
      src="{{item.img}}"
      title="{{item.name}}"
      data-action="editImage"
      data-edit="img" />
  </div>
  <div class="item-header__body">
    <div class="header__no-border item-header__title">
        <h3 id="Name" class="header__no-border">
            <input class="" name="name" type="text" value="{{item.name}}" placeholder="Name" />
        </h3>
    </div>

    <h3 class="item-header__type label--rail">
      <span class="label__text">
        {{#unless @root.editable}}
          {{!-- Talent category, if present --}}
          {{#if systemFields.talentCategory}}
            {{#if systemFields.talentCategory.choices}}
              {{localize (lookup systemFields.talentCategory.choices item.system.talentCategory)}}
            {{/if}}
          {{/if}}
          {{!-- Skill type, if present --}}
          {{#if systemFields.skillType}}
            {{#if systemFields.skillType.choices}}
              {{localize (lookup systemFields.skillType.choices item.system.skillType)}}
            {{/if}}
          {{/if}}
        {{/unless}}
        {{localize (concat "TYPES.Item." item.type)}}
      </span>
    </h3>
    <span class="item-body__summary">
      {{#if @root.editable}}
        {{> "systems/ed4e/templates/global/editor-brief.hbs"}}
      {{else}}
        {{{enrichedBriefDescription}}}
      {{/if}}
    </span>
  </div>
</header>