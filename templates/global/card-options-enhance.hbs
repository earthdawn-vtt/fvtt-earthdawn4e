<div class="itemControlGroup" data-item-id="{{_id}}">
	{{#if @root.editable}}
		<a
			class="item-control item-upgrade__ability"
			data-action="upgradeItem"
			data-tooltip="{{localize 'ED.Controls.upgrade'}}"
			data-tooltip-direction="UP"
			aria-label="{{localize 'ED.Controls.upgrade'}}">
			<i class="fas fa-arrow-circle-up" aria-hidden="true"></i>
		</a>
	{{/if}}

	<a
		class="item-control item-display"
		data-action="displayChild"
		data-tooltip="{{localize 'ED.Actor.Buttons.showInChat'}}"
		data-tooltip-direction="UP"
		aria-label="{{localize 'ED.Actor.Buttons.showInChat'}}">
		<i class="fas fa-comments" aria-hidden="true"></i>
	</a>

	<a
		class="item-control item-delete"
		data-action="deleteChild"
		data-uuid="{{uuid}}"
		data-tooltip="{{localize 'ED.Actor.Cards.delete'}}"
		data-tooltip-direction="UP"
		aria-label="{{localize 'ED.Actor.Cards.delete'}}">
		<i class="fas fa-trash" aria-hidden="true"></i>
	</a>

	<a
		class="item-control item-edit"
		data-action="editChild"
		data-uuid="{{uuid}}"
		data-tooltip="{{localize 'ED.Actor.Cards.edit'}}"
		data-tooltip-direction="UP"
		aria-label="{{localize 'ED.Actor.Cards.edit'}}">
		<i class="fas fa-edit" aria-hidden="true"></i>
	</a>
</div>
