<div class="ed-document-creation flexcol">

  <div class="name-and-folder-inputs flexrow">
    <div class="form-group">

      <label>{{localize "ED.Document.name"}}</label>
      <div class="form-fields">
        <input type="text" name="name" placeholder="{{defaultName}}" value="{{name}}" autofocus>
      </div>

    </div>

    {{#if hasFolders}}
      <div class="form-group">

        <label>{{ localize "DOCUMENT.Folder" }}</label>
        <div class="form-fields">
          <select name="folder">
            <option value=""></option>
            {{selectOptions folders selected=folder valueAttr="id" labelAttr="name"}}
          </select>
        </div>

      </div>
    {{/if}}
  </div>

  <div class="type-selection scrollable flexcol">

    {{#each typesRadio}}
    <h3 class="type-group-label label--rail">
      <span class="label__text">
        {{@key}}
      </span>
    </h3>
      <div class='button-toggle flexrow'>
        {{radioBoxes 'type' this checked=../currentType}}  
      </div>
    {{/each}}

  </div>

</div>